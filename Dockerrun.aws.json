{
    "AWSEBDocckerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mitchellgerdisch/multi-client", 
            "hostname": "client", 
            "memory": 128,
            "essential": false  
        },
        {
            "name": "server",
            "image": "mitchellgerdisch/multi-server", 
            "hostname": "api", 
            "memory": 128,
            "essential": false 
        },
        {
            "name": "worker",
            "image": "mitchellgerdisch/multi-worker", 
            "memory": 128,
            "essential": false  
        },
        {
            "name": "nginx",
            "image": "mitchellgerdisch/multi-nginx", 
            "memory": 128,
            "essential": true, 
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"] 
        }

    ]

}